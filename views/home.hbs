<div class="container py-5 d-flex">
  <div class="row col-12 mx-auto justify-content-center align-self-center">
    <div class="card col-8">
      <div class="card-body">

        <form method="POST" action="/">
          <div class="row" style="display: flex; justify-content: center">
            <div class="mb-3 g-2" style="display: flex; justify-content: center">
              <h5 class="card-title">Account Login</h5>
            </div>
            <div class="mb-3 g-2" style="display: flex; justify-content: center">
            </div>
            <div class="mb-3 g-2">
              <!--若使用者沒有輸入內容，就按下了送出鈕，會防止表單送出並提示使用者--->
              <input type="email" class="form-control {{#if invalid}}is-invalid{{/if}}" name="email" id="email"
                placeholder="Email" required>
              <div id="validationFeedback" class="invalid-feedback">
                unexisted user or invalid password.
              </div>
            </div>
            <div class="mb-3 g-2">
              <input type="text" class="form-control" name="password" id="password" placeholder="Password" required>
            </div>
            <button type=" submit" class="btn btn-outline-primary" style="width: 12rem">Login</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>